<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    tools:showIn="@layout/item_match_detail">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewItemSlot0"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />

        <ImageView
            android:id="@+id/imageViewItemSlot1"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />

        <ImageView
            android:id="@+id/imageViewItemSlot2"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewItemSlot3"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />

        <ImageView
            android:id="@+id/imageViewItemSlot4"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />

        <ImageView
            android:id="@+id/imageViewItemSlot5"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_backpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBackPack0"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />

        <ImageView
            android:id="@+id/imageViewBackPack1"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />

        <ImageView
            android:id="@+id/imageViewBackPack2"
            android:layout_width="@dimen/item_width"
            android:layout_height="@dimen/item_height" />
    </LinearLayout>
</LinearLayout>